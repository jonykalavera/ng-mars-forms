.form-group
    label.capitalize(for='id_topics')
        | {{ tags.caption }}
        span(ng-show="tags.blank") &nbsp;*
    tags-input(ng-model='tags.tagsModel', placeholder='{{ tags.placeholder }}', display-property='{{ tags.displayProperty }}',
               replace-spaces-with-dashes='false')
        auto-complete(source='tags.loadTags($query)')
